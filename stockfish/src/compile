# add the bmi2 in for windows


### Make the Windows release ###
echo "Making the Windows release"
make clean
make build ARCH=x86-64 -j $1 \
	EXE=stockfish.exe \
	COMP=mingw \
	CXXFLAGS+="-lwsock32 -lws2_32 -D WIN32 -std=c++14 -Ofast -fopenmp -march=native" \
	LDFLAGS+="-std=c++14 -Ofast -fopenmp -march=native"


### Make the Linux release ###
echo "Making the Linux release"
make clean
make build ARCH=x86-64-bmi2 -j $1 \
	EXE=stockfish \
	COMP=clang \
	CXXFLAGS+="-std=c++14 -Ofast -fopenmp -march=native" \
	LDFLAGS+="-std=c++14 -Ofast -fopenmp -march=native"